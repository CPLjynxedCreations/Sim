<Page x:Class="Sim.Pages.JobPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sim.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Background="Yellow"
      Title="JobPage">

    <Grid>
        <StackPanel>
            <Button Content="Police" Height="50" Click="OnJobClicked"/>
            <Button Content="Fire Fighter" Height="50" Click="OnJobClicked"/>
            <Button Content="Paramedic" Height="50" Click="OnJobClicked"/>
            <Button Content="Army" Height="50" Click="OnJobClicked"/>
        </StackPanel>
    </Grid>
</Page>
