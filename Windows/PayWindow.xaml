<Window x:Class="Sim.Windows.PayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sim.Windows"
        WindowStyle="None" WindowStartupLocation="CenterOwner"
        Background="Green"
        mc:Ignorable="d"
        Title="PayWindow" Height="200" Width="400">
    <Grid>
        <Button x:Name="btnOk" Content="Ok"
                Width="100" Height="35"
                Margin="0,0,0,20"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="lblPayLabel" Text="You have been paid $30"
                   FontSize="25" FontWeight="UltraBlack"
                   Margin="30,60,0,0"
                   VerticalAlignment="Top" HorizontalAlignment="Center"/>
    </Grid>
</Window>
